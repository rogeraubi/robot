
{
  "env": {
    "node": true,    // Set Node.js environment
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  
  "plugins": [
    "@typescript-eslint"
  ]
}
